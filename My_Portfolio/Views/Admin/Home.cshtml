@model My_Portfolio.Models.Entities.Hero

@{
    Layout = "~/Views/Shared/Admin/_LayoutAdmin.cshtml";

}
<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0">
                <h6>Home Düzenle</h6>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                
                <div class="table-responsive p-0">

                    <table class="table align-items-center mb-0">

                        <div class="card-body">
                            @if (TempData["Uyarı"] != null)
                            {
                                            <div class="alert alert-secondary text-light ">
                                    @TempData["Uyarı"]
                                            </div>
                            }
                            <form role="form" method="post" asp-controller="Admin" asp-action="Home">
                                <input type="hidden" asp-for="Id" />
                                <div class="mb-3">
                                    <label>Ad Soyad</label>
                                    <input type="text" class="form-control" placeholder="Ad Soyad" aria-label="Email" aria-describedby="email-addon" name="Adi" asp-for="Adi">
                                </div>
                                <div class="mb-3">
                                    <label>Açıklama</label>
                                    <input type="text" class="form-control" placeholder="Açıklama" aria-label="Password" aria-describedby="password-addon" name="Hakkinda" asp-for="Hakkinda">

                                </div>
                               

                                <div class="text-center">
                                    <button type="submit" class="btn bg-gradient-primary w-100 mt-4 mb-0">Kaydet</button>
                                </div>
                            </form>

                        </div>



                    </table>
                </div>
            </div>
        </div>
    </div>
</div>