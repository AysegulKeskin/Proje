@model My_Portfolio.Models.IndexViewModel
@{
    var data = Model.Titles.ElementAt(0);
    var data2 = Model.Abouts.ElementAt(0);
}

<section id="about" class="about">
    <div class="container">

        <div class="section-title">
            <span>@data.AboutTitle</span>
            <h2>@data.AboutTitle</h2>
            <p>@data.AboutAciklama</p>
        </div>

        <div class="row">
            
            <div class="image col-lg-4 d-flex align-items-stretch justify-content-center justify-content-lg-start " style="background-image:url(assets/img/@data2.Img); background-repeat:no-repeat; min-height:500px; background-size:cover; background-position:center center;">
               
            </div>
            <div class="col-lg-8 d-flex flex-column align-items-stretch">
                <div class="content ps-lg-4 d-flex flex-column justify-content-center">
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li class="mt-3"><i class="bi bi-chevron-right"></i> <strong>Name:</strong> <span>@data2.Name</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Website:</strong> <span>@data2.Website</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Telefon:</strong> <span>@data2.Phone</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Şehir:</strong> <span>@data2.City</span></li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul>
                                <li class="mt-3"><i class="bi bi-chevron-right"></i> <strong>Yaş:</strong> <span>@data2.Age</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Derece:</strong> <span>@data2.Degree</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@data2.Email</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Serbestlik Durumu:</strong> <span>@data2.Serbestlik</span></li>
                            </ul>
                        </div>
                    </div>
                    <div class="row mt-n4">
                        <div class="col-md-6 mt-5 d-md-flex align-items-md-stretch">
                            <div class="count-box">
                                <i class="bi bi-emoji-smile" style="color: #20b38e;"></i>
                                <span data-purecounter-start="0" data-purecounter-end="@data2.Data1" data-purecounter-duration="1" class="purecounter"></span>
                                <p><strong>Happy Clients</strong> @data2.Aciklama1</p>
                            </div>
                        </div>

                        <div class="col-md-6 mt-5 d-md-flex align-items-md-stretch">
                            <div class="count-box">
                                <i class="bi bi-cast" style="color: #8a1ac2;"></i>
                                <span data-purecounter-start="0" data-purecounter-end="@data2.Data2" data-purecounter-duration="1" class="purecounter"></span>
                                <p><strong>Projects</strong> @data2.Aciklama2</p>
                            </div>
                        </div>

                        <div class="col-md-6 mt-5 d-md-flex align-items-md-stretch">
                            <div class="count-box">
                                <i class="bi bi-clock" style="color: #2cbdee;"></i>
                                <span data-purecounter-start="0" data-purecounter-end="@data2.Data3" data-purecounter-duration="1" class="purecounter"></span>
                                <p><strong>Years of experience</strong> @data2.Aciklama3</p>
                            </div>
                        </div>

                        <div class="col-md-6 mt-5 d-md-flex align-items-md-stretch">
                            <div class="count-box">
                                <i class="bi bi-award" style="color: #ffb459;"></i>
                                <span data-purecounter-start="0" data-purecounter-end="@data2.Data4" data-purecounter-duration="1" class="purecounter"></span>
                                <p><strong>Awards</strong> @data2.Aciklama4</p>
                            </div>
                        </div>
                    </div>
                </div><!-- End .content-->

                <div class="skills-content ps-lg-4">
                    @foreach (var item in Model.AboutEnds)
                    {
                        <div class="progress">
                            <span class="skill">@item.Bilgi <i class="val">@item.Deger%</i></span>
                            <div class="progress-bar-wrap">
                                <div class="progress-bar" role="progressbar" aria-valuenow="@item.Deger" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    }

                </div>

            </div>
        </div>

    </div>
</section>
